{
  "extends": "solium:all",
  "plugins": [
    "security"
  ],
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "indentation": [
      "error",
      4
    ],
    "arg-overflow": [
      "off"
    ],
    "max-len": [
      "warning",
      79
    ],
    "security/enforce-explicit-visibility": [
      "error"
    ],
    "security/no-block-members": [
      "warning"
    ],
    "security/no-inline-assembly": [
      "warning"
    ]
  }
}
